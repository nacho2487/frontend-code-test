{
	"name": "frontend-code-test",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"backend": "nodemon backend/server.js",
		"dev": "concurrently --kill-others-on-fail \"npm run backend\" \"npm run frontend\"",
		"frontend": "cd frontend && npm start",
		"postinstall": "cd frontend && npm install",
		"start": "node backend/server.js",
		"test": "jest --forceExit"
	},
	"dependencies": {
		"app-root-path": "^2.2.1",
		"axios": "^0.19.0",
		"body-parser": "^1.18.3",
		"express": "^4.16.4",
		"express-validator": "^6.2.0",
		"morgan": "^1.9.1",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"axios-mock-adapter": "^1.17.0",
		"concurrently": "^4.0.1",
		"jest": "^24.9.0",
		"nodemon": "^1.19.1",
		"supertest": "^4.0.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nicocard/frontend-code-test.git"
	},
	"author": "nicocard",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nicocard/frontend-code-test/issues"
	},
	"homepage": "https://github.com/nicocard/frontend-code-test#readme",
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"testPathIgnorePatterns": [
			"/frontend/"
		]
	}
}
